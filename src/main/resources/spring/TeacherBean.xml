<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="teacherAction" class="com.bupt.se.homework.action.TeacherAction">
        <property name="teacherBo" ref="teacherBo"/>
    </bean>
    <bean id="teacherBo" class="com.bupt.se.homework.bo.impl.TeacherBoImpl">
        <property name="teacherDAO" ref="teacherDAO"/>
    </bean>
    <bean id="teacherDAO" class="com.bupt.se.homework.dao.impl.TeacherDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

</beans>