<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--Hibernate session factory-->
    <bean id="sessionFactory"
          class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
        <property name="dataSource">
            <ref bean="dataSource"/>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.hbm2ddl.auto">update</prop>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
                <prop key="hibernate.show_sql">true</prop>
                <prop key="hibernate.connection.url">jdbc:mysql://localhost:3306/homeworkSystem</prop>
                <prop key="hibernate.connection.driver_class">com.mysql.jdbc.Driver</prop>
                <prop key="hibernate.current_session_context_class">thread</prop>
            </props>
        </property>
        <property name="annotatedClasses">
            <list>
                <value>com.bupt.se.homework.entity.Admin</value>
                <value>com.bupt.se.homework.entity.Course</value>
                <value>com.bupt.se.homework.entity.Group</value>
                <value>com.bupt.se.homework.entity.Homework</value>
                <value>com.bupt.se.homework.entity.HomeworkGroup</value>
                <value>com.bupt.se.homework.entity.GroupStudent</value>
                <value>com.bupt.se.homework.entity.StudentHomework</value>
                <value>com.bupt.se.homework.entity.Student</value>
                <value>com.bupt.se.homework.entity.StudentCourse</value>
                <value>com.bupt.se.homework.entity.Teacher</value>
            </list>
        </property>
    </bean>
</beans>